<div class="container px-5 px-sm-0">
  <div class="row">
    
    
    <%= render "books/list", user: @user, book_new: @book_new %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= @books.each do |books| %>
          <tr>
            <td><%= link_to (attachment_image_tag books.user, :profile_image, :fill ,60, 60, fallback: "no_image.jpg", size: "100x100"), user_path(books.user.id) %></td>
            <td><%= link_to books.title, book_path(books) %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
